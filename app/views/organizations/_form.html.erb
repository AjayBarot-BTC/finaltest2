<%= form_for @organization, :html => { :class => 'form-horizontal' } do |f| %>
<% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this data input from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="span5">
      <div class="control-group">
    <%= f.label :Organization_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :org_name, placeholder: "Enter Organization Name", :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Country, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :org_country,['india', 'United states', 'Australia', 'United Kingdom', 'Iran' ] , placeholder: "choose country", :class => 'text_field' %>
    </div>
  </div>
  </div>
  </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projectdetails_path, :class => 'btn' %>
  </div>
<% end %>